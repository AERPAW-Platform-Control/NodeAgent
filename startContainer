#!/bin/bash

if [[ "$#" -lt 1 ]]; then
    echo "usage: startContainer containernametofetch" > /dev/stderr
    exit 1
fi

if [ ! -d /var/local"$1" ]; then
    mkdir -p /var/local/"$1"
fi


CONTAINER = "$1"

docker run -it --privileged -v /dev/bus/usb:/dev/bus/usb -v /var/local/"$CONTAINER":/data "$CONTAINER" 2> /var/local/"$CONTAINER"-stderr > /var/local/"$CONTAINER"-stdout &

# "docker run" was executed in the background; the script now exits immediately.
